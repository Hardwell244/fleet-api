# Application
APP_NAME="Fleet API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8000

# Locale
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=fleet_api
DB_USERNAME=root
DB_PASSWORD=

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_DAILY_DAYS=14

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120

CACHE_STORE=database
QUEUE_CONNECTION=database

# Broadcasting & Queue
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Mail (Configurar em produção)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@fleet-api.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security - Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Security - CORS (⚠️ ATUALIZAR EM PRODUÇÃO!)
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Security - Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_TRACKING=10

# Security - Session
SESSION_SECURE_COOKIE=false  # true em produção com HTTPS
SESSION_SAME_SITE=lax

# Security - Passwords (⚠️ NUNCA USAR EM PRODUÇÃO!)
# Estas credenciais são APENAS para desenvolvimento/seeders
SEEDER_ADMIN_EMAIL=admin@logitech.com
SEEDER_ADMIN_PASSWORD=password
SEEDER_USER_PASSWORD=password

# ⚠️ ATENÇÃO: Em produção, gerar senhas fortes e aleatórias!
# Exemplo: php artisan tinker
# > Str::random(32)

# Vite (Frontend - se aplicável)
VITE_APP_NAME="${APP_NAME}"
